<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <com.huan.myadt.adapter.FlowAdapter
        android:id="@+id/flowlayout_tags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.huan.myadt.adapter.FlowAdapter>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:gravity="right" >

        <TextView
            android:id="@+id/tv_tag_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="add"
            android:background="@drawable/tv_bg_stroke_green"
            android:textColor="@color/white"
            android:textSize="16sp" />
        
        <TextView
            android:id="@+id/tv_tag_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="clear"
            android:background="@drawable/tv_bg_stroke_blue"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

   

</LinearLayout>